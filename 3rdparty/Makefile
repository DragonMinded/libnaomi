all: zlib libbz2 libpng freetype libjpeg libxmp libtimidity littlefs libogg libvorbis libmpg123

.PHONY: zlib
zlib:
	$(MAKE) -C zlib

.PHONY: libbz2
libbz2:
	$(MAKE) -C libbz2

.PHONY: libpng
libpng:
	$(MAKE) -C libpng

.PHONY: freetype
freetype:
	$(MAKE) -C freetype

.PHONY: libjpeg
libjpeg:
	$(MAKE) -C libjpeg

.PHONY: libxmp
libxmp:
	$(MAKE) -C libxmp

.PHONY: libtimidity
libtimidity:
	$(MAKE) -C libtimidity

.PHONY: littlefs
littlefs:
	$(MAKE) -C littlefs

.PHONY: libogg
libogg:
	$(MAKE) -C libogg

.PHONY: libvorbis
libvorbis:
	$(MAKE) -C libvorbis

.PHONY: libmpg123
libmpg123:
	$(MAKE) -C libmpg123

install: install-zlib install-libbz2 install-libpng install-freetype install-libjpeg install-libxmp install-libtimidity install-littlefs install-libogg install-libvorbis install-libmpg123

.PHONY: install-zlib
install-zlib:
	$(MAKE) -C zlib install

.PHONY: install-libbz2
install-libbz2:
	$(MAKE) -C libbz2 install

.PHONY: install-libpng
install-libpng:
	$(MAKE) -C libpng install

.PHONY: install-freetype
install-freetype:
	$(MAKE) -C freetype install

.PHONY: install-libjpeg
install-libjpeg:
	$(MAKE) -C libjpeg install

.PHONY: install-libxmp
install-libxmp:
	$(MAKE) -C libxmp install

.PHONY: install-libtimidity
install-libtimidity:
	$(MAKE) -C libtimidity install

.PHONY: install-littlefs
install-littlefs:
	$(MAKE) -C littlefs install

.PHONY: install-libogg
install-libogg:
	$(MAKE) -C libogg install

.PHONY: install-libvorbis
install-libvorbis:
	$(MAKE) -C libvorbis install

.PHONY: install-libmpg123
install-libmpg123:
	$(MAKE) -C libmpg123 install

.PHONY: clean
clean:
	$(MAKE) -C zlib clean
	$(MAKE) -C libbz2 clean
	$(MAKE) -C libpng clean
	$(MAKE) -C freetype clean
	$(MAKE) -C libjpeg clean
	$(MAKE) -C libxmp clean
	$(MAKE) -C libtimidity clean
	$(MAKE) -C littlefs clean
	$(MAKE) -C libogg clean
	$(MAKE) -C libvorbis clean
	$(MAKE) -C libmpg123 clean

.PHONY: allclean
allclean:
	$(MAKE) -C zlib allclean
	$(MAKE) -C libbz2 allclean
	$(MAKE) -C libpng allclean
	$(MAKE) -C freetype allclean
	$(MAKE) -C libjpeg allclean
	$(MAKE) -C libxmp allclean
	$(MAKE) -C libtimidity allclean
	$(MAKE) -C littlefs allclean
	$(MAKE) -C libogg allclean
	$(MAKE) -C libvorbis allclean
	$(MAKE) -C libmpg123 allclean
